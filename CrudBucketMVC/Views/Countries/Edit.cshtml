@model Country

<h1>Edit @Model.Name</h1>

<form method="post" action="/contienents/@Model.contienent.Id/countries/@Model.Id">
    <div>
        <label for="Name">Name: </label>
        <input type="text" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div>
        <label for="Population">Population: </label>
        <input type="number" id="Population" name="Population" value="@Model.Population" min="0" />
    </div>
    <br />
    <button type="submit">Update</button>
</form>
<br />
<form method="post" action="/countries/@Model.contienent.Id/countries/@Model.Id/delete">
    <button type ="submit">DELETE @Model.Name</button>
</form>